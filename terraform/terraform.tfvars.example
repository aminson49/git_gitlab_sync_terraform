github_token = "ghp_your_token_here"
gitlab_token = "glpat-your_token_here"
github_owner = "your_username"
gitlab_base_url = "https://gitlab.com"

jenkins_webhook_url = "https://your-jenkins.com/github-webhook/"

# Jenkins job creation (optional)
jenkins_url = "https://your-jenkins.com"
jenkins_username = "your-jenkins-user"
jenkins_api_token = "your-jenkins-api-token"
jenkins_job_enabled = false
jenkins_job_name = "github-to-gitlab-sync"
jenkins_job_branch = "*/main"
jenkins_scm_credentials_id = "github-token"

# Optional Jenkinsfile generation settings
jenkinsfile_enabled = true
jenkins_github_credentials_id = "github-token"
jenkins_gitlab_credentials_id = "gitlab-token"

# Optional sync script generation
sync_script_enabled = true

github_to_gitlab = {
  github_repo_name    = "source_repo"
  github_repo_full    = "owner/source_repo"
  gitlab_project_path = "group/target_repo"
}

gitlab_to_github = {
  github_repo_name    = "target_repo"
  github_repo_full    = "owner/target_repo"
  gitlab_project_path = "group/source_repo"
}
